load("//bazel/rules/risc0:defs.bzl", "risc0_rust_library_pair", "risc0_rust_method")
load("@rules_rust//rust:defs.bzl", "rust_library", "rust_test")

risc0_rust_method(
    name = "init",
    srcs = ["src/bin/init.rs"],
    rustc_flags = ["-Coverflow-checks=on"],
    visibility = ["//visibility:public"],
    deps = [
        ":core_guest",
        "//risc0/zkvm/sdk/rust/guest",
    ],
)

risc0_rust_method(
    name = "turn",
    srcs = ["src/bin/turn.rs"],
    rustc_flags = ["-Coverflow-checks=on"],
    visibility = ["//visibility:public"],
    deps = [
        ":core_guest",
        "//risc0/zkvm/sdk/rust/guest",
    ],
)

risc0_rust_library_pair(
    name = "core",
    srcs = ["src/lib.rs"],
    crate_name = "battleship_core",
    guest_deps = [
        "//risc0/zkvm/sdk/rust/core:core_guest",
        "@crates_guest//:serde",
    ],
    host_deps = [
        "//risc0/zkvm/sdk/rust/core:core_host",
        "@crates_host//:serde",
    ],
    rustc_flags = ["-Coverflow-checks=on"],
    visibility = ["//visibility:public"],
)

rust_library(
    name = "core_wasm",
    srcs = ["src/lib.rs"],
    crate_name = "battleship_core",
    visibility = ["//visibility:public"],
    deps = [
        "//risc0/zkvm/sdk/rust/core:core_wasm",
        "@crates_wasm//:serde",
    ],
)

rust_test(
    name = "test",
    crate = ":core_host",
    rustc_flags = ["-Coverflow-checks=on"],
)
