component IsBit(x: Val) {
  x * (1 - x) = 0;
}

component Bit(x: Val) {
  r := Reg(x);
  IsBit(r);
  r
}

component U32(x: Val) {
  // Do nothing, in reality this would use lookup
}

component MultiMuls(a: Val) {
  b := a * 1;
  c := b * 2;
}

